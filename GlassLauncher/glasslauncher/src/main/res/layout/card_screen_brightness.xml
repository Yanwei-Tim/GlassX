<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_videosize_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- 左侧图标 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/setting_left"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_brightness"
                android:layout_width="220dip"
                android:layout_height="220dip"
                android:src="@drawable/icon_brightness" />
        </LinearLayout>
        <!-- 右侧文字 -->

        <LinearLayout
            style="@style/h_Layout_Setting"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                style="@style/h_Text_Setting"
                android:text="@string/label_setting_screen" />

            <TextView
                android:id="@+id/txt_brightness"
                style="@style/h_Text_Setting"
                android:layout_marginTop="@dimen/height_setting_spacingTop"
                android:text="@string/lable_brightness_middle"
                android:textColor="@color/color_green" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>