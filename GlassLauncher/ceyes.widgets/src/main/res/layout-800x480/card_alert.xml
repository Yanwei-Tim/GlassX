<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000">

    <RelativeLayout
        android:id="@+id/horizon_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hor_icon"
                android:layout_width="106dip"
                android:layout_height="106dip"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/hor_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dip"
                android:textColor="#fff"
                android:textSize="60sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/hor_tip"
            style="@style/AlertTextTheme"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dip"
            android:textColor="@color/alert_bottom_text_color"
            android:textSize="30sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/hor_refresh"
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vertical_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ver_icon"
                android:layout_width="186dip"
                android:layout_height="186dip"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/ver_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="6dip"
                android:text=""
                android:textColor="#fff"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/ver_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="6dip"
                android:text=""
                android:textColor="#fff"
                android:textSize="30sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ver_refresh"
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:progressDrawable="@drawable/alert_progressbar"
        android:visibility="gone" />

</RelativeLayout>