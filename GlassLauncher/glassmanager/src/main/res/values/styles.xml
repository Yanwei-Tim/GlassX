<resources>

    <style name="GlassManagerTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_black</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Dialog 对话框中的标题 -->
    <style name="dialog_tv_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- Dialog 对话框中的内容 -->
    <style name="dialog_tv_content" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- Dialog 对话框中的按钮 -->
    <style name="dialog_btn" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/color_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dialog_row_value" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">7dp</item>
    </style>

</resources>
